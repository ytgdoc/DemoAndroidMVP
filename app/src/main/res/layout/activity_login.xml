<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_main"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_above="@+id/parent_ghichu"
            >
            <include
                layout="@layout/app_bar_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/profile_user"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/firstname"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:textColor="@color/white"
                                android:id="@+id/firstname"
                                android:textColorHint="@color/mixwhile"
                                android:hint="@string/enter_here"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/lastname"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:textColorHint="@color/mixwhile"
                                android:id="@+id/lastname"
                                android:textColor="@color/white"
                                android:hint="@string/enter_here"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/email"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:textColorHint="@color/mixwhile"
                                android:id="@+id/emailId"
                                android:textColor="@color/white"
                                android:hint="@string/enter_here"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/phonenumber"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:textColor="@color/white"
                                android:id="@+id/phone_number"
                                android:textColorHint="@color/mixwhile"
                                android:hint="@string/enter_here"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/birthday"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:id="@+id/birthday"
                                android:textColor="@color/white"
                                android:textColorHint="@color/mixwhile"
                                android:hint="@string/enter_here"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/SSN"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:textColorHint="@color/mixwhile"
                                android:id="@+id/ssn"
                                android:textColor="@color/white"
                                android:hint="@string/enter_here"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/pwd"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:textColor="@color/white"
                                android:id="@+id/pass"
                                android:inputType="textPassword"
                                android:textColorHint="@color/mixwhile"
                                android:textColorHighlight="@color/mixwhile"
                                android:hint="@string/enter_here"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:text="@string/comfirmpass"
                                android:gravity="center|left"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txttolbar"
                                android:paddingLeft="@dimen/_10sdp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:id="@+id/comfirmpass"
                                android:textColor="@color/white"
                                android:inputType="textPassword"
                                android:hint="@string/enter_here"
                                android:textColorHint="@color/mixwhile"
                                android:textSize="@dimen/_14sdp"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorbg"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/note"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/txttolbar"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_10sdp"
                                android:orientation="horizontal"
                                >
                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/chk_yes"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Yes"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    />
                                <View
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="match_parent"/>
                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/chk_no"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="No"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:padding="@dimen/_10sdp"
                            >
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:text="@string/accept"
                                android:textAllCaps="true"
                                android:id="@+id/btn_login"
                                android:textSize="@dimen/_16sdp"
                                android:textColor="@color/white"
                                android:background="@drawable/customebutton"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
